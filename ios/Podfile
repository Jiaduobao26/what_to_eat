# Uncomment this line to define a global platform for your project
platform :ios, '14.0'

# CocoaPods analytics sends network stats synchronously affecting flutter build latency.
ENV['COCOAPODS_DISABLE_STATS'] = 'true'

# è¯»å–local.propertiesæ–‡ä»¶ - ç±»ä¼¼Android build.gradle.kts
def load_local_properties
  properties = {}
  local_properties_file = File.join(File.dirname(__FILE__), '..', 'local.properties')
  fallback_properties_file = File.join(File.dirname(__FILE__), '..', 'assets', 'local.properties')
  
  # å°è¯•è¯»å–æ ¹ç›®å½•çš„local.properties
  if File.exist?(local_properties_file)
    File.foreach(local_properties_file) do |line|
      line.strip!
      next if line.empty? || line.start_with?('#')
      
      if line.include?('=')
        key, value = line.split('=', 2)
        properties[key.strip] = value.strip
      end
    end
    puts "ğŸ”‘ Loaded #{properties.keys.size} properties from local.properties"
  # å¤‡ç”¨æ–¹æ¡ˆï¼šå°è¯•è¯»å–assets/local.properties
  elsif File.exist?(fallback_properties_file)
    File.foreach(fallback_properties_file) do |line|
      line.strip!
      next if line.empty? || line.start_with?('#')
      
      if line.include?('=')
        key, value = line.split('=', 2)
        properties[key.strip] = value.strip
      end
    end
    puts "ğŸ”‘ Loaded #{properties.keys.size} properties from assets/local.properties (fallback)"
  else
    puts "âš ï¸ local.properties not found, using defaults"
  end
  
  properties
end

# åŠ è½½é…ç½®
local_props = load_local_properties
google_maps_api_key = local_props['GOOGLE_MAPS_API_KEY'] || local_props['API_KEY']

if google_maps_api_key
  puts "ğŸ—ºï¸ Google Maps API key configured: #{google_maps_api_key[0..9]}..."
else
  puts "âš ï¸ No Google Maps API key found in local.properties"
end

project 'Runner', {
  'Debug' => :debug,
  'Profile' => :release,
  'Release' => :release,
}

def flutter_root
  generated_xcode_build_settings_path = File.expand_path(File.join('..', 'Flutter', 'Generated.xcconfig'), __FILE__)
  unless File.exist?(generated_xcode_build_settings_path)
    raise "#{generated_xcode_build_settings_path} must exist. If you're running pod install manually, make sure flutter pub get is executed first"
  end

  File.foreach(generated_xcode_build_settings_path) do |line|
    matches = line.match(/FLUTTER_ROOT\=(.*)/)
    return matches[1].strip if matches
  end
  raise "FLUTTER_ROOT not found in #{generated_xcode_build_settings_path}. Try deleting Generated.xcconfig, then run flutter pub get"
end

require File.expand_path(File.join('packages', 'flutter_tools', 'bin', 'podhelper'), flutter_root)

flutter_ios_podfile_setup

target 'Runner' do
  use_modular_headers!
  flutter_install_all_ios_pods File.dirname(File.realpath(__FILE__))
  target 'RunnerTests' do
    inherit! :search_paths
  end
end

post_install do |installer|
  # è·å–ä¹‹å‰åŠ è½½çš„Google Maps APIå¯†é’¥
  local_props = load_local_properties
  google_maps_api_key = local_props['GOOGLE_MAPS_API_KEY'] || local_props['API_KEY']
  
  installer.pods_project.targets.each do |target|
    flutter_additional_ios_build_settings(target)
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '14.0'
      
      # æ³¨å…¥Google Maps APIå¯†é’¥åˆ°æ„å»ºé…ç½®ä¸­ - ç±»ä¼¼Android gradle
      if google_maps_api_key
        config.build_settings['GOOGLE_MAPS_API_KEY'] = google_maps_api_key
      end
    end
  end
  
  # åŒæ—¶è®¾ç½®Runneré¡¹ç›®çš„æ„å»ºé…ç½®
  installer.aggregate_targets.each do |target|
    target.xcconfigs.each do |config_name, config_file|
      if google_maps_api_key
        config_file.attributes['GOOGLE_MAPS_API_KEY'] = google_maps_api_key
      end
    end
  end
  
  puts "âœ… iOS build configuration updated with local.properties"
end
